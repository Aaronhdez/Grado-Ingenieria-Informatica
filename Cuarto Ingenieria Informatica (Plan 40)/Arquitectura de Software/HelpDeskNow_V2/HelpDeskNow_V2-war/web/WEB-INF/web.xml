<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>control.FrontController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOutCommand</servlet-name>
        <servlet-class>command.user.LogOutCommand</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNewTicketCommand</servlet-name>
        <servlet-class>command.ticket.AddNewTicketCommand</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AssignToTechnicianCommand</servlet-name>
        <servlet-class>command.ticket.AssignToTechnicianCommand</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeStatusView</servlet-name>
        <servlet-class>command.ticket.ChangeStatusView</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeStatusCommand</servlet-name>
        <servlet-class>command.ticket.ChangeStatusCommand</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/FrontController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOutCommand</servlet-name>
        <url-pattern>/LogOutCommand</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNewTicketCommand</servlet-name>
        <url-pattern>/AddNewTicketCommand</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AssignToTechnicianCommand</servlet-name>
        <url-pattern>/AssignToTechnicianCommand</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeStatusView</servlet-name>
        <url-pattern>/ChangeStatusView</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeStatusCommand</servlet-name>
        <url-pattern>/ChangeStatusCommand</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
