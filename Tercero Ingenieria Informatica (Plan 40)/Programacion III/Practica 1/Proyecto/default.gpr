project Default is

   for Source_Dirs use ("src");
   for Exec_Dir use ".";
   for Object_Dir use "obj";
   for Main use ("main.adb");

   package Linker is
      for Default_Switches ("ada") use ("-g");
   end Linker;

   package Compiler is
      for Switches ("ada") use
        ("-g", "-fstack-check",
         "-gnata", "-gnato", "-gnat12",
	 "-gnatwa", "-gnateE");
   end Compiler;

end Default;

